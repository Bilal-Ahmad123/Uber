<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_30sdp"
    android:paddingHorizontal="@dimen/_20sdp"
    tools:context=".presentation.riderpresentation.bottomSheet.RideAcceptedSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Meet at the pickup point"
            android:textSize="@dimen/_15ssp"/>

        <FrameLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/driver_arrival_time_box">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="3"
                    android:id="@+id/time_to_reach"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="min"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="@dimen/_12ssp"
        android:text="Ride details"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_26sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text="PIN for this ride"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/otp_pin_box"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/otp_pin_box"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/otp_pin_box"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/otp_pin_box"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/otp_pin_box"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/otp_pin_box"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/otp_pin_box"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:background="@drawable/otp_pin_box"
                />
        </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>